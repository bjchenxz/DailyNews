<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DayTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="toolbar_background">@color/toolbar_background</item>
        <item name="navdrawer_background">@color/navdrawer_background</item>
        <item name="navdrawer_text_color">@color/navdrawer_text_color</item>
        <item name="item_date_text_color">@color/item_date_text_color</item>
        <item name="item_story_text_color">@color/item_story_text_color</item>
        <item name="item_story_background_color">@color/card_background_color</item>
        <item name="android:windowBackground">@color/style_window_background</item>
        <item name="windowBackground">@color/style_window_background</item>
        <item name="menu_background">@color/style_window_background</item>
        <item name="menu_text_color">@color/menu_text_color</item>
    </style>

    <style name="NightTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/material_white80</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color252525</item>
        <item name="toolbar_background">@color/color252525</item>
        <item name="navdrawer_background">@color/color252525</item>
        <item name="navdrawer_text_color">@color/color999999</item>
        <item name="item_date_text_color">@color/color888888</item>
        <item name="item_story_text_color">@color/white</item>
        <item name="item_story_background_color">@color/color404040</item>
        <item name="android:windowBackground">@color/window_background_night</item>
        <item name="windowBackground">@color/window_background_night</item>
        <item name="menu_background">@color/window_background_night</item>
        <item name="menu_text_color">@color/white</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:colorBackground">@color/style_window_background</item>
        <item name="android:textColor">@color/menu_text_color</item>
    </style>

    //----------------START--------------------------------
    <style name="pop_no_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_show_no_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pop_hide_no_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_show_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pop_hide_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
    //----------------END--------------------------------
</resources>
