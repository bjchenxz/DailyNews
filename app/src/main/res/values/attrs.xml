<resources>

    <declare-styleable name="ViewPagerIndicator">
        <!-- Style of the circle indicator. -->
        <attr name="vpiCirclePageIndicatorStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered" format="boolean" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation" />
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="radius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth" format="dimension" />
        <!-- View background -->
        <attr name="android_background" format="reference" />
    </declare-styleable>

    <attr name="toolbar_background" format="color"/>
    <attr name="navdrawer_background" format="color"/>
    <attr name="navdrawer_text_color" format="color"/>
    <attr name="item_date_text_color" format="color"/>
    <attr name="item_story_text_color" format="color"/>
    <attr name="item_story_background_color" format="color"/>
    <attr name="menu_background" format="color"/>
    <attr name="menu_text_color" format="color"/>
    <attr name="windowBackground" format="color"/>

    //-----------------START---------------------------------
    <!--页面背景色，由于使用侧滑系统背景属性为透明，所以这里自定义一个属性-->
    <attr name="backgroundColor" format="color|reference"/>

    <!--悬浮按钮的颜色-->
    <attr name="fabColor" format="color|reference"/>

    <!--导航图标和文字状态颜色-->
    <attr name="navColor" format="reference|reference"/>

    <!--toolbar的主题-->
    <attr name="toolbarTheme" format="reference"/>

    <!--新闻频道管理的背景-->
    <attr name="itemChannelBackground" format="reference"/>

    <!--导航头像背景-->
    <attr name="navHeaderBackground" format="reference"/>

    <!--CheckedTextView选中状态的颜色-->
    <attr name="checkTextViewColorStateList" format="reference"/>

    <declare-styleable name="PacManRefreshHead">
        <attr name="pacIconColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="ThreePointLoadingView">
        <attr name="pointColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="progress_bar_color" format="color"/>
        <attr name="save_progress_bar_color" format="color"/>
        <attr name="frame_color" format="color"/>
        <attr name="origin_progress" format="float"/>
        <attr name="max_progress" format="float"/>
        <attr name="progress_orientation" format="enum">
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="2"/>
        </attr>
        <attr name="wave" format="boolean"/>
    </declare-styleable>
    //-------------------END-----------------------------------------

</resources>
